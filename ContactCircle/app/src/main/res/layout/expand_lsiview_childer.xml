<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="64dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/NavigationTitle"
        android:text="通信学生会"
        android:layout_centerVertical="true"
        android:drawableLeft="@mipmap/ic_circle_circle"
        android:drawablePadding="16dp"
        android:id="@+id/circle_layout_expand_list_children_tx"

        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_praise"
        android:layout_centerVertical="true"
        android:id="@+id/circle_layout_expand_list_children_iv" />

</RelativeLayout>