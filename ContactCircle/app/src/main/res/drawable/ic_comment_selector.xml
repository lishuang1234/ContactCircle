<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:drawable="@mipmap/ic_comment_press"  android:top="10dp" android:bottom="8dp" android:left="8dp" android:right="8dp" >

            </item>
            <item>
                <shape android:shape="oval">
                    <size android:width="40dp" android:height="40dp" />
                    <solid android:color="@color/hint" />
                </shape>
            </item>
        </layer-list>


    </item>

    <item>

        <layer-list>
            <item android:drawable="@mipmap/ic_comment"   android:top="10dp" android:bottom="8dp" android:left="8dp" android:right="8dp" >

            </item>
            <item>
                <shape android:shape="oval">
                    <size android:width="40dp" android:height="40dp" />
                    <solid android:color="@color/divider" />
                </shape>
            </item>
        </layer-list>

    </item>
</selector>